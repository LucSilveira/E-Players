@model Equipe

@{
    ViewData["Title"] = "Equipes";
}

<div class="titulo_pagina">
    <h1>cadastro de @ViewData["Title"]</h1>
</div>

<form action="@Url.Action("Cadastrar")" method="post" class="cadastro" enctype="multipart/form-data">
    
    <div class="campo">
        <label for="IdEquipe">IdEquipe</label>
        <input type="text" name="IdEquipe" id="IdEquipe"/>
    </div>

    <div class="campo">
        <label for="NomeEquipe">Nome da Equipe</label>
        <input type="text" name="NomeEquipe" id="NomeEquipe"/>
    </div>

    <div class="campo">
        <label for="Imagem">Imagem</label>
        <input type="file" name="Imagem" id="Imagem"/>
    </div>

    <button class="gradient btn" type="submyt">Cadastrar</button>
</form>

<table class="table table-responsive table-striped">
    <thead>
        <th>IdEquipe</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach(var _item in ViewBag.Equipe)
        {
            <tr>
                <td>@_item.IdEquipe</td>
                <td>@_item.NomeEquipe</td>
                <td>
                    <img src="img/Equipe/@_item.Imagem" alt="Imagem da equipe @_item.NomeEquipe"/>
                </td>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@_item.IdEquipe"><i class="fa fa-trash"></i></a>
                </td>
            </tr>  
        }
    </tbody>
</table>