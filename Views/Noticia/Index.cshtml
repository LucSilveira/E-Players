@model Noticia

@{
    ViewData["Title"] = "Noticias";
}

<div class="titulo_pagina">
    <h1>cadastro de @ViewData["Title"]</h1>
</div>

<form action="@Url.Action("Cadastrar")" method="post" class="cadastro" enctype="multipart/form-data">
    
    <div class="campo">
        <label for="IdNoticia">IdNoticia</label>
        <input type="text" name="IdNoticia" id="IdNoticia"/>
    </div>

    <div class="campo">
        <label for="Titulo">Titulo da notícia</label>
        <input type="text" name="Titulo" id="Titulo"/>
    </div>

    <div class="campo">
        <label for="TextoNoticia">Texto da notícia</label>
        <input type="text" name="TextoNoticia" id="TextoNoticia"/>
    </div>

    <div class="campo">
        <label for="Imagem">Imagem</label>
        <input type="file" name="Imagem" id="Imagem"/>
    </div>
    
    <button class="gradient btn" type="submyt">Cadastrar</button>
</form>

<table class="table table-responsive table-striped">
    <thead>
        <th>IdNoticia</th>
        <th>Titulo</th>
        <th>Texto da Noticia</th>
        <th>Imagem</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach(var _item in ViewBag.Noticia)
        {
            <tr>
                <td>@_item.IdNoticia</td>
                <td>@_item.Titulo</td>
                <td>@_item.TextoNoticia</td>
                <td>
                    <img src="img/Noticia/@_item.Imagem" alt="Imagem da equipe @_item.Titulo"/>
                </td>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@_item.IdNoticia"><i class="fa fa-trash"></i></a>
                </td>
            </tr>  
        }
    </tbody>
</table>